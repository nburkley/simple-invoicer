<%= simple_nested_form_for [current_user, @profile], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <fieldset>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :company_name %>

      <%= render 'addresses/form', :parent_form=>f %>

      <%= f.input :website %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </fieldset>
<% end %>