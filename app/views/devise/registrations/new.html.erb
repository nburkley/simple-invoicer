<div class="row">
  <div class="span8 offset2">
    <div class="well">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal signup-form' }) do |f| %>
        <%= f.error_notification %>

          <%= f.input :email, :required => true, :autofocus => true, :label=>'Email', :placeholder => 'name@example.com' %>
          <%= f.input :password, :required => true, :label=>'Password' %>
          <%= f.input :password_confirmation, :required => true, :label=>'Password Confirmation' %>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
          <%= render "devise/shared/links" %>

      <% end %>
    </div>
  </div>
</div>