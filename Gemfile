  gem 'factory_girl_rails', :require => false
  gem 'quiet_assets'
  gem 'wkhtmltopdf'
  gem 'email_spec'
  gem 'shoulda-matchers', :require => false
end

group :production do
  gem 'wkhtmltopdf-heroku'
end

